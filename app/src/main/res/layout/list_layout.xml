<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="300dp"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="288dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnEmail"
                android:layout_width="92dp"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/btnNavigate"
                android:text="Email"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnCall"
                android:layout_width="101dp"
                android:layout_height="39dp"
                android:layout_alignStart="@+id/btnNavigate"
                android:layout_below="@+id/btnNavigate"
                android:text="Call"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtPlaces"
                android:layout_width="168dp"
                android:layout_height="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="34dp"
                android:text="Place"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/imgPlaces"
                android:layout_width="match_parent"
                android:layout_height="201dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_launcher" />

            <Button
                android:id="@+id/btnNavigate"
                android:layout_width="196dp"
                android:layout_height="39dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/imgPlaces"
                android:text="Navigate"
                android:textSize="15sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>